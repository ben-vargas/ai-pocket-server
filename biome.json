{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "formatter": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "suspicious": {
        "noExplicitAny": "warn",
        "useIterableCallbackReturn": "error"
      },
      "complexity": {
        "noUselessFragments": "warn"
      },
      "style": {
        "useNodejsImportProtocol": "off",
        "useImportType": "warn"
      },
      "correctness": {
        "noUnusedFunctionParameters": "warn"
      }
    }
  },
  "files": {
    "includes": ["./src/**"],
    "ignoreUnknown": true
  }
}

